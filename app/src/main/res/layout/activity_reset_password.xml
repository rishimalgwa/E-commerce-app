<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Buyers.ResetPasswordActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/design_default_color_secondary_variant"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <EditText
    android:id="@+id/find_phone_number"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/relativeLayout6"
    android:background="@drawable/inputs"
    android:padding="14dp"
    android:layout_margin="15dp"
    android:hint="Please enter your mobile number"/>
    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following security questions below"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_below="@id/find_phone_number"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_questions"
        android:background="@drawable/inputs"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="Your first pet name"/>
    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_1"
        android:background="@drawable/inputs"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="Your favorite food"/>
    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_2"
        android:background="@drawable/buttons"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:textColor="@android:color/white"
        android:text="Verify"
        android:textStyle="bold"
        android:textSize="20dp"/>
</RelativeLayout>